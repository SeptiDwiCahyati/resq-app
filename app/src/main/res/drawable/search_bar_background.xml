<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Saat fokus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Putih solid -->
            <stroke android:width="2dp" android:color="#007BFF" /> <!-- Biru terang -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Saat tidak fokus -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" /> <!-- Abu terang (tidak terlalu transparan) -->
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Abu muda -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
